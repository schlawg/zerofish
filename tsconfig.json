{
  "include": ["src"],
  "exclude": [],

  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "declaration": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowUnreachableCode": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "zerofishEngine": ["./dist/zerofishEngine.js"]
    },
    "skipLibCheck": true,
    "noImplicitThis": false,
    "inlineSourceMap": true,
    "inlineSources": false,
    "strict": true,
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "types": ["node"]
  }
}
